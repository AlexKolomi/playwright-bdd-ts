    "build": "tsc"
  },
  "dependencies": {
    "@playwright/test": "^1.20.2",
    "@cucumber/cucumber": "^8.0.0",
    "typescript": "^4.5.2",
    "ts-node": "^10.4.0",
    "@types/node": "^17.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "@types/chai": "^4.2.21"
  },
  "devDependencies": {
    "tslint": "^6.1.3"
  },
